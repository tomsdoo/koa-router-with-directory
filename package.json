{
  "name": "koa-router-with-directory",
  "version": "1.11.1",
  "description": "koa-router with your directory",
  "main": "dist/nextindex.cjs",
  "module": "dist/nextindex.js",
  "types": "dist/esm/src/nextindex.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/nextindex.js",
      "require": "./dist/nextindex.cjs",
      "types": "./dist/esm/src/nextindex.d.ts",
      "default": "./dist/nextindex.js"
    }
  },
  "scripts": {
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:tsup": "tsup",
    "build": "tsc --project tsconfig.esm.json && tsc --project tsconfig.cjs.json",
    "format": "npm run format:src && npm run format:test && npm run format:document",
    "format:src": "prettier --write src/**/*.ts",
    "format:test": "prettier --write test/**/*.ts",
    "format:document": "prettier --write docs/**/*.html",
    "lint:src": "eslint src/**/*.ts",
    "lint:test": "eslint test/**/*.ts",
    "prepare": "husky install",
    "serve:doc": "mdbook --serve --directory docs",
    "test:vitest": "vitest",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha -r ts-node/register \"test/test.ts\" --timeout 30000"
  },
  "lint-staged": {
    "docs/**/*.html": "npm run format:document",
    "src/**/*.ts": [
      "npm run lint:src",
      "npm run format:src"
    ],
    "test/**/*.ts": [
      "npm run lint:test",
      "npm run format:test"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomsdoo/koa-router-with-directory.git"
  },
  "keywords": [
    "koa-router"
  ],
  "author": "tom",
  "license": "MIT",
  "devDependencies": {
    "@tomsd/md-book": "^0.17.0",
    "@types/koa-router": "^7.4.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "20.10.8",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.0.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "tsup": "8.0.1",
    "typescript": "^4.8.4",
    "vitest": "1.2.0"
  },
  "dependencies": {
    "fast-glob": "3.3.2"
  }
}
