{
  "name": "koa-router-with-directory",
  "version": "1.12.1",
  "description": "koa-router with your directory",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "biome check",
    "prepare": "husky",
    "serve:doc": "mdbook --serve --directory docs",
    "test": "vitest"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint"
    ],
    "test/**/*.ts": [
      "npm run lint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomsdoo/koa-router-with-directory.git"
  },
  "keywords": [
    "koa-router"
  ],
  "author": "tom",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tomsd/md-book": "1.3.4",
    "@tsconfig/node22": "22.0.0",
    "@types/node": "22.10.2",
    "husky": "9.1.7",
    "lint-staged": "15.3.0",
    "ts-node": "10.9.2",
    "tsup": "8.3.5",
    "typescript": "5.7.2",
    "vitest": "2.1.8"
  },
  "dependencies": {
    "fast-glob": "3.3.2"
  }
}
